<script>
   <% if(!!error[0] && error[0].type == 'success') { %>
       toastr.success('<%- error[0].message %>');
   <%  }  %>
  
  <% if(!!error[0] && error[0].type == 'info') { %>
      toastr.info('<%- error[0].message %>');
     <%  }  %>
  <% if(!!error[0] && error[0].type == 'error') { %>
      toastr.error('<%- error[0].message %>');
     <%  }  %>
  <% if(!!error[0] && error[0].type == 'warning') { %>
      toastr.warning('<%- error[0].message %>');
     <%  }  %>

 
 
</script>